
<div class="container-fluid">
  <div class="row">
    <h1>Best Burgers!<img src="/public/assets/img/burger.jpg" height="50px"></h1>
    <div class="col-md-6">
      <h2>Burgers to be devoured!</h2>
      <ul>
        {{#each burgers}}
          <li>
            <p>
              {{this.burger_name}}

              <button data-burgerid="{{this.id}}" class="devBurger btn-warning">Devour!</button>
            </p>
          </li>
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <h2>Devoured Burgers!</h2>
      <ul>
        {{#each devouredBurgers}}
          <li>
            <p>
              {{this.burger_name}}

              <button data-burgeridAgain="{{this.id}}" class="devBurgerAgain btn-warning">Devour Again!</button>
            </p>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>


  <div class="row form">
    <div class="col-md-12">
      <form>
        <textarea type="input" name="burger" id="newBurger"></textarea>
        <button type="submit" id="submit" class="btn-warning">Add Burger</button>
        <p>Add a burger you want to eat and hit the submit button</p>
      </form>  
    </div>
  </div>

</div>



